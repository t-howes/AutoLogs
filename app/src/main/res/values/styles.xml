<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PrimaryButton" parent="AppButton">
        <item name="android:background">@drawable/button_rounded_primary_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SecondaryButton" parent="AppButton">
        <item name="android:background">@drawable/button_rounded_secondary_selector</item>
        <item name="android:textColor">@drawable/secondary_button_text_selector</item>
    </style>

    <style name="SecondaryButton.Bordered" parent="SecondaryButton">
        <item name="android:background">@drawable/button_rounded_secondary_bordered_selector</item>
        <item name="android:textColor">@drawable/secondary_button_text_selector</item>
    </style>

    <style name="TextTitle">
        <item name="android:fontFamily">@font/exo_bold</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextBody_Regular">
        <item name="android:fontFamily">@font/exo_regular</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBody_Medium" parent="TextBody_Regular">
        <item name="android:fontFamily">@font/exo_medium</item>
    </style>

</resources>
