<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/total_spent"
        style="@style/TextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/zero_dollars" />

    <TextView
        android:id="@+id/total_spent_label"
        style="@style/TextBody_Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_spent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/total_spent" />

    <TextView
        android:id="@+id/mods_spent"
        style="@style/TextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/mods_spent_label"
        app:layout_constraintEnd_toStartOf="@id/maintenance_spent_label"
        app:layout_constraintTop_toBottomOf="@id/total_spent_label"
        android:text="@string/zero_dollars" />

    <TextView
        android:id="@+id/mods_spent_label"
        style="@style/TextBody_Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/maintenance_spent_label"
        app:layout_constraintTop_toBottomOf="@id/mods_spent"
        android:text="@string/modifications" />

    <TextView
        android:id="@+id/maintenance_spent"
        style="@style/TextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/mods_spent_label"
        app:layout_constraintEnd_toEndOf="@id/maintenance_spent_label"
        app:layout_constraintTop_toBottomOf="@id/total_spent_label"
        android:text="@string/zero_dollars" />

    <TextView
        android:id="@+id/maintenance_spent_label"
        style="@style/TextBody_Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/mods_spent_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/maintenance_spent"
        android:text="@string/maintenance" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/notes_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="notes_top_divider, notes_label, notes, notes_bottom_divider"/>

    <View
        android:id="@+id/notes_top_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="@dimen/padding_large"
        app:layout_constraintTop_toBottomOf="@id/mods_spent_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/notes_label"
        style="@style/TextBody_Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toBottomOf="@id/notes_top_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/notes"/>

    <TextView
        android:id="@+id/notes"
        style="@style/TextBody_Regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_medium"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toBottomOf="@id/notes_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Some notes about the car."/>

    <View
        android:id="@+id/notes_bottom_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/notes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/reminders_label"
        style="@style/TextBody_Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_extra_large"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toBottomOf="@id/notes_bottom_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/upcoming_maintenance"
        android:visibility="gone"
        tools:visibility="visible"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/upcoming_reminders"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reminders_label" />

</androidx.constraintlayout.widget.ConstraintLayout>